FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue T 300
);

regions
(
    // Set patch values (using ==)
    boxToCell
    {
        box (0.245 0.245 0) (0.255 0.255 0.1);

        fieldValues
        (
            volScalarFieldValue T 1500
        );
    }
);

